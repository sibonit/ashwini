<%# KA: June 2015: Used in People index %>

   <h2>SIB Directory</h2>

	  <%= form_tag(people_path, :method => "get", class: "navbar-form", id: "search-form") do %>
	    <div class="input-append">
	      <%= text_field_tag :search_by_name, params[:search_by_name],  :size => 50, class: "span2", placeholder: "Search Entire Directory" %>
      	      <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> </button>
	    </div>
	 <% end %>
	<%= yield %>



<hr>
<%# KA: Get all the department names from the database %>
	<div class="blue_heading">Faculty</div>
	<ul class="directory">
		<li><a href = "/people/faculty_all">School of Integrative Biology</a></li>
        
 	   <% @dept.sort.each do |dept| %>
		<li>
		<a href="/people/departments/<%= dept.id%>"><%= dept.name%></a>
		</li>
	    <% end %>
	</ul>

    <hr>
<%# KA: Get all the NON-PEEC research areas from the database %>
	<div class="blue_heading">Faculty by Research Area</div>
	<ul class="directory">
             <% @res_area_non_peec.each do |area| %>
		<li>
		<a href="/people/research_areas/<%= area.id%>"><%= area.name%></a>
		</li>
	      <% end %>
	</ul>


