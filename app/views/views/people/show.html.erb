<%# KA: June 2015: People index %>



<% content_for( :title, 'People' ) %>
<% content_for( :sidebar, 'about' ) %>
<% content_for( :expand,  'people_ex' ) %>

<%# KA: If page requested is:/people/faculty %>
<% if params[:id]=="faculty" %>
	<%= render '/people/faculty' %>	

<%# KA: If page requested is Graduate or 390/490 faculty, show listing with profile blurb. %>
<% elsif params[:id].in?(['graduate_students', 'faculty_390_490']) %>
	<h2> SIB Directory</h2>
	<h4 style="text-align:center" > <%= @title %> </h4>

	  <%= form_tag(people_path, :method => "get", class: "navbar-form", id: "search-form") do %>
	    <div class="input-append">
	      <%= text_field_tag :search_by_name, params[:search_by_name],  :size => 50, class: "span2", placeholder: "Search Entire Directory" %>
      	      <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> </button>
	    </div>
	 <% end %>
	<%= yield %>

	<p> <%= @description %> </p>

	<%= render '/people/table_with_blurb' %>	

<%# KA: If page requested is staff or AP %>
<% else %>
	<h2> SIB Directory</h2>
	<h4 style="text-align:center" > <%= @title %> </h4>
	  <%= form_tag(people_path, :method => "get", class: "navbar-form", id: "search-form") do %>
	    <div class="input-append">
	      <%= text_field_tag :search_by_name, params[:search_by_name],  :size => 50, class: "span2", placeholder: "Search Entire Directory" %>
      	      <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i> </button>
	    </div>
	 <% end %>
	<%= yield %>

	<%= render '/people/table' %>	

<% end %>


<p> &nbsp; </p>
<p> &nbsp; </p>
<p> &nbsp; </p>



