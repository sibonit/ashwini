<%# KA: June 2015: People index %>
<% content_for( :title, 'People' ) %>
<% content_for( :sidebar, 'about' ) %>
<% content_for( :expand,  'people_ex' ) %>


<h2 style ="text-align:center"> SIB Directory</h2>
<br>
  <%= form_tag(people_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <h4> Search People by Name: </h4>
      <%= text_field_tag :search_by_name, params[:search_by_name],  :size => 50, class: "span2", placeholder: "Search People" %>
      <button id="people_search_btn" class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
      </div>
  <% end %>
  <%= yield %>

<%#KA: SHow the message when the search text field is blank. If not, show the search results. %>
<% if params[:search_by_name].blank? %>
	<p style="padding-left: 15px">Enter the name you wish to find. The beginning letters of first name or last name are sufficient.</p>
<% else %>
<br>
	<%= render '/people/table' %>	
 
<% end %>
<hr>

<p style="padding-left: 15px"> If you wish to see the entire directory, go <a href = "/people/all">here.</a></p>





    
















