            </div>



<!--KA: START: Calendar events Loop-->

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header" style="color:gray"> Calendar </h1>
            </div>

	<%@events.take(4).each do |t|%>
            <div class="col-md-3 cal-panel">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h4 align = "center" ><%= (t.startDate)%></h4>
			<h6 align = "center" ><%= (t.startTime)%></h6>
                    </div>
                    <div class="panel-body fixed-panel">
                        <p><%= t.titleLong %> </p>   
			                   
                    </div>
                </div>
            </div>
	<%end%>

	
	</div>

<!--KA: END: Calendar events loop-->


























