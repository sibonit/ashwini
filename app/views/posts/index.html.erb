<h2>Parsing News from RSS feed</h2>
<ul>
<%@entry.each do |t|%>

    <div class="row">
            <div class="col-md-1 text-center">
                <p><i class="fa fa-camera fa-4x"></i>
                </p>
                <p><%=t.published%></p>
            </div>
            <div class="col-md-6">
                <h3>
                    <a href="blog-post.html"><%=t.title%></a>
                </h3>
                <p>by <a href="#"><%=t.author%></a>
                </p>
                <p><%=t.content%></p>
                <a class="btn btn-primary" href="blog-post.html">Read More <i class="fa fa-angle-right"></i></a>
		<hr>
            </div>
        </div>
<%end%>
</ul>



